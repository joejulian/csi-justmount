FROM debian:bookworm-slim
ARG TARGETPLATFORM
RUN apt-get update && \
    apt-get install -y --no-install-recommends \
      ca-certificates \
      fuse3 \
      glusterfs-client \
      s3fs \
      sshfs && \
    rm -rf /var/lib/apt/lists/*
COPY ${TARGETPLATFORM}/justmount /justmount
USER 0:0
ENTRYPOINT ["/justmount"]
